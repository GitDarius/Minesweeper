<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440" ResizeMode="CanMinimize">

    <Window.Resources>
        <Style x:Key="Titre" TargetType="TextBlock">

        </Style>
    </Window.Resources>
    
    
    <Grid>
        <!--Fond d'écran-->
        <Grid.Background>
            <ImageBrush ImageSource="assets/alien/Background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0" FlowDirection="RightToLeft">
                <Image Source="assets/alien/gear_icon.jpg" Width="100" Height="100" MouseLeftButtonDown="OuvrirParametres"/>
            </StackPanel>
            
            <TextBlock Text="     Minesweeper" FontSize="128" FontFamily="Leelawadee" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="#FF192E91"/>
            
        </StackPanel>
        

    </Grid>
</Window>
